#!/bin/env bash

THIS_SCRIPT_DIR=$(dirname "$0")

source "${THIS_SCRIPT_DIR}/.common"

VERSION=$("${BIN_DIR}/get-version")
export VERSION

cd "${DEPLOY_DIR}" || exit

initDockerBuilder

if [[ -z "$PLATFORM" ]]; then
  docker buildx bake \
    --push
else
  docker buildx bake \
    --set "*.platform=${PLATFORM}" \
    --push
fi
